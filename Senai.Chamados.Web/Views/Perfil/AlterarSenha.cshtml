@model Senai.Chamados.Web.ViewModels.Conta.AlterarSenhaViewModel
@{
    ViewBag.Title = "Alterar Senha";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Alterar Senha</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(x => x.SenhaAtual, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.SenhaAtual, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenhaAtual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.NovaSenha, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.NovaSenha, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.NovaSenha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ConfirmarSenha, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.ConfirmarSenha, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ConfirmarSenha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}